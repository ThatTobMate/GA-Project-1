  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.title %></td>
    <td><%= link_to 'Show', profile_album_path(album.profile.id, album.id) %></td>
    <td><%= link_to 'Edit', edit_profile_album_path(album.profile.id, album.id) %></td>
    <td><%= link_to 'Destroy', profile_album_path(album.profile.id, album.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

